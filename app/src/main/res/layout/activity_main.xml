<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.fernandofischer.quizapp.MainActivity"
        android:weightSum="1">

        <TextView
            style="@style/QuestionStyle"
            android:text="@string/question1"
            android:id="@+id/question1"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FrontDoor"
                style="@style/AnswerStyle"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goooogle"
                style="@style/AnswerStyle"/>
            <RadioButton
                android:id="@+id/q1correctAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BackRub"
                style="@style/AnswerStyle"/>
        </RadioGroup>



        <TextView
            style="@style/QuestionStyle"
            android:text="@string/question2"
            android:id="@+id/question2"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/q2correctAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1996"
                style="@style/AnswerStyle"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1998"
                style="@style/AnswerStyle"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                style="@style/AnswerStyle"/>
        </RadioGroup>


        <TextView
            style="@style/QuestionStyle"
            android:text="@string/question3"
            android:id="@+id/question3"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                style="@style/AnswerStyle"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2002"
                style="@style/AnswerStyle"/>
            <RadioButton
                android:id="@+id/q3correctAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2004"
                style="@style/AnswerStyle"/>
        </RadioGroup>

        <TextView
            style="@style/QuestionStyle"
            android:text="@string/question4"
            android:id="@+id/question4"/>

        <CheckBox
            android:id="@+id/q4correctAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Music"
            style="@style/AnswerStyle"/>

        <CheckBox
            android:id="@+id/q4correctAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adwords"
            style="@style/AnswerStyle"/>

        <CheckBox
            android:id="@+id/q4wrongAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter"
            style="@style/AnswerStyle"/>

        <CheckBox
            android:id="@+id/q4correctAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adsense"
            style="@style/AnswerStyle"/>

        <TextView
            style="@style/QuestionStyle"
            android:text="@string/question5"
            android:id="@+id/question5"/>
        
        <EditText
            android:id="@+id/q5answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Digite sua resposta"
            style="@style/AnswerStyle"/>

        <RatingBar
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:isIndicator="true"
            android:max="5" />

        <Button
            android:layout_marginTop="25dp"
            android:text="Finalizar quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="finishQuiz" />


    </LinearLayout>




</ScrollView>
